{
  "private": true,
  "name": "flopflip",
  "description": "Monorepository for flipflop and its projects e.g. react-redux, react and the wrapper",
  "scripts": {
    "postinstall": "check-node-version --package && npm run build",
    "lint": "xo",
    "format": "run-p format:md format:js",
    "format:md": "pmd *.md",
    "format:js": "prettier --write '**/modules/**/*.js' '**/demo/**/*.js'",
    "test": "cross-env NODE_ENV=test jest",
    "test:ci": "cross-env NODE_ENV=testt npm run lint && jest --no-watchman --coverage && codecov",
    "test:watch": "cross-env NODE_ENV=test npm test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "build": "lerna run build",
    "build:watch": "lerna run build:watch",
    "release": "npm run build && lerna publish --registry=https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tdeekens/flopflip.git"
  },
  "author": "Tobias Deekens <nerd@tdeekens.name>",
  "license": "MIT",
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "bugs": {
    "url": "https://github.com/tdeekens/flopflip/issues"
  },
  "xo": {
    "ignores": [
      "**/demo/**/*.js",
      "config/*.js",
      "**/rollup.config.js",
      "packages/react-broadcast/modules/components/subscriber.js",
      "packages/react-broadcast/modules/components/broadcast.js"
    ],
    "semicolon": true,
    "space": 2,
    "parser": "babel-eslint",
    "extends": [
      "xo-react",
      "prettier",
      "plugin:jest/recommended",
      "prettier/react"
    ],
    "envs": [
      "es6",
      "jest"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "es5",
          "singleQuote": true
        }
      ],
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/valid-expect": "error",
      "max-nested-callbacks": [
        "error",
        20
      ]
    },
    "globals": [
      "VERSION"
    ]
  },
  "homepage": "https://github.com/tdeekens/flopflip#readme",
  "devDependencies": {
    "@commercetools/jest-enzyme-matchers": "^1.1.2",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "check-node-version": "^2.1.0",
    "codecov": "^2.2.0",
    "cross-env": "^5.0.0",
    "enzyme": "^3.0.0",
    "enzyme-matchers": "^4.0.0",
    "enzyme-to-json": "^3.0.1",
    "eslint-config-prettier": "^2.1.1",
    "eslint-config-xo-react": "^0.13.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.3.0",
    "jest": "^21.2.1",
    "lerna": "^2.1.2",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.7.1",
    "prettier-markdown": "^0.1.8",
    "rimraf": "^2.5.4",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.0",
    "rollup-plugin-filesize": "^1.4.2",
    "rollup-plugin-includepaths": "^0.2.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.0",
    "rollup-watch": "^4.3.1",
    "xo": "^0.18.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./config/jest.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testRegex": "\\.spec\\.js$",
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/packages/.*/node_modules",
      "/packages/.*/dist"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "keywords": [
    "react",
    "redux",
    "feature-flags",
    "feature-toggles",
    "LaunchDarkly",
    "HoC",
    "store-enhancer"
  ],
  "workspaces": [
    "packages/*"
  ]
}
