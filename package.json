{
  "private": true,
  "name": "flopflip",
  "description": "Monorepository for flipflop and its projects e.g. react-redux, react and the wrapper",
  "scripts": {
    "postinstall": "check-node-version --package && npm run build",
    "lint": "eslint --format 'node_modules/eslint-formatter-pretty' packages",
    "format": "npm run format:md && npm run format:js",
    "format:md": "pmd *.md",
    "format:js": "prettier --write '**/modules/**/*.js' '**/demo/**/*.js'",
    "test": "cross-env NODE_ENV=test jest --config .jestrc.json",
    "test:ci": "cross-env NODE_ENV=test npm run lint && npm test -- --no-watchman --coverage && codecov",
    "test:watch": "cross-env NODE_ENV=test npm test -- --watch",
    "test:coverage": "cross-env NODE_ENV=test npm test -- --coverage",
    "build": "lerna run --parallel build",
    "build:watch": "lerna run --parallel build:watch",
    "release": "npm run build && lerna publish --registry=https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tdeekens/flopflip.git"
  },
  "author": "Tobias Deekens <nerd@tdeekens.name>",
  "license": "MIT",
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "bugs": {
    "url": "https://github.com/tdeekens/flopflip/issues"
  },
  "homepage": "https://github.com/tdeekens/flopflip#readme",
  "devDependencies": {
    "@commercetools/jest-enzyme-matchers": "^1.1.2",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-jest": "^21.2.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.10",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "check-node-version": "^2.1.0",
    "codecov": "^3.0.0",
    "cross-env": "^5.1.1",
    "enzyme": "^3.1.1",
    "enzyme-matchers": "^4.0.1",
    "enzyme-to-json": "^3.2.1",
    "eslint": "^4.10.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-xo": "^0.19.0",
    "eslint-config-xo-react": "^0.14.0",
    "eslint-formatter-pretty": "^1.3.0",
    "eslint-plugin-jest": "^21.2.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "jest": "^21.2.1",
    "jest-enzyme": "^4.0.1",
    "jest-localstorage-mock": "^2.0.1",
    "lerna": "^2.5.1",
    "prettier": "^1.7.4",
    "prettier-markdown": "^0.1.8",
    "raf": "^3.4.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-node-globals": "^1.1.0",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-filesize": "^1.4.2",
    "rollup-plugin-includepaths": "^0.2.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.3.1"
  },
  "keywords": [
    "react",
    "redux",
    "feature-flags",
    "feature-toggles",
    "LaunchDarkly",
    "HoC",
    "store-enhancer"
  ],
  "workspaces": [
    "packages/*"
  ]
}
